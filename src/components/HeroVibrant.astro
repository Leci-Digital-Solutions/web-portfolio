---
import Button from './Button.astro';
import Starfield from './Starfield.astro';
import AbstractShapes from './AbstractShapes.astro';

interface Props {
	name?: string;
	title?: string;
	description?: string;
	primaryButtonText?: string;
	primaryButtonHref?: string;
	secondaryButtonText?: string;
	secondaryButtonHref?: string;
}

const {
	name = "Madhu",
	title = "Creative Developer",
	description = "Passionate about creating beautiful, functional, and user-friendly digital products. Specialized in web development, UI/UX design, and bringing ideas to life through code.",
	primaryButtonText = "HIRE ME",
	primaryButtonHref = "#contact",
	secondaryButtonText = "VIEW WORK",
	secondaryButtonHref = "#projects",
} = Astro.props;
---

<section class="hero-vibrant">
	<Starfield density="high" animated={true} />
	<AbstractShapes variant="hero" />

	<div class="container">
		<div class="hero-content">
			<div class="hero-label">
				<span class="label-dot"></span>
				<span class="label-text">Available for Freelance</span>
			</div>

			<div class="hero-greeting">
				<span class="greeting-text">Hello! I'm</span>
				<h1 class="hero-name">
					<span class="gradient-text-vibrant">{name}</span>
				</h1>
			</div>

			<h2 class="hero-title">{title}</h2>

			<p class="hero-description">
				{description}
			</p>

			<div class="hero-actions">
				<Button variant="primary" size="large" href={primaryButtonHref}>
					{primaryButtonText}
				</Button>
				<Button variant="secondary" size="large" href={secondaryButtonHref}>
					{secondaryButtonText}
				</Button>
			</div>

			<div class="hero-social">
				<a href="https://github.com" class="social-link" aria-label="GitHub">
