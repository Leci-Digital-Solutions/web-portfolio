---
interface Props {
	variant?: 'primary' | 'secondary' | 'tag';
	size?: 'small' | 'medium' | 'large';
	href?: string;
	type?: 'button' | 'submit' | 'reset';
	class?: string;
	active?: boolean;
}

const {
	variant = 'primary',
	size = 'medium',
	href,
	type = 'button',
	class: className = '',
	active = false,
} = Astro.props;

const Tag = href ? 'a' : 'button';
---

<Tag
	class:list={['btn', `btn-${variant}`, `btn-${size}`, { active }, className]}
	href={href}
	type={!href ? type : undefined}
>
	<slot />
</Tag>

<style>
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		font-family: inherit;
		font-weight: 700;
		text-decoration: none;
		border: none;
		cursor: pointer;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		white-space: nowrap;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.btn:disabled {
		opacity: 0.5;
		cursor: not-allowed;
	}

	/* Sizes */
	.btn-small {
		padding: 0.5rem 1rem;
		font-size: 0.75rem;
		border-radius: 1.5rem;
	}

	.btn-medium {
		padding: 0.875rem 2rem;
		font-size: 0.875rem;
		border-radius: 2rem;
	}

	.btn-large {
		padding: 1.125rem 2.5rem;
		font-size: 1rem;
		border-radius: 2.5rem;
	}

	/* Primary Button - Gradient with Glow */
	.btn-primary {
		background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 50%, #ef4444 100%);
		color: #ffffff;
		box-shadow:
			0 4px 15px rgba(139, 92, 246, 0.4),
			0 0 30px rgba(236, 72, 153, 0.3);
		position: relative;
	}

	.btn-primary::before {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, #a78bfa 0%, #f472b6 50%, #f87171 100%);
		opacity: 0;
		transition: opacity 0.3s ease;
		border-radius: inherit;
	}

	.btn-primary:hover::before {
		opacity: 1;
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow:
			0 8px 25px rgba(139, 92, 246, 0.5),
			0 0 40px rgba(236, 72, 153, 0.4),
			0 0 60px rgba(239, 68, 68, 0.2);
	}

	.btn-primary:active {
		transform: translateY(0);
	}

	.btn-primary span {
		position: relative;
		z-index: 1;
	}

	/* Secondary Button - Ghost/Outline */
	.btn-secondary {
		background: transparent;
		color: rgba(255, 255, 255, 0.9);
		border: 1px solid rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(10px);
	}

	.btn-secondary:hover {
		background: rgba(139, 92, 246, 0.1);
		border-color: rgba(139, 92, 246, 0.5);
		color: #ffffff;
		transform: translateY(-2px);
		box-shadow: 0 4px 20px rgba(139, 92, 246, 0.2);
	}

	.btn-secondary:active {
		transform: translateY(0);
	}

	/* Tag Button - Pill Style for Filters/Skills */
	.btn-tag {
		background: transparent;
		color: rgba(255, 255, 255, 0.7);
		border: 1px solid rgba(255, 255, 255, 0.15);
		padding: 0.5rem 1.25rem;
		font-size: 0.8125rem;
		border-radius: 2rem;
		font-weight: 500;
		text-transform: none;
		letter-spacing: 0.02em;
	}

	.btn-tag:hover {
		background: rgba(139, 92, 246, 0.15);
		border-color: rgba(139, 92, 246, 0.4);
		color: #ffffff;
		transform: scale(1.05);
	}

	.btn-tag.active {
		background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(236, 72, 153, 0.2));
		border-color: rgba(139, 92, 246, 0.6);
		color: #ffffff;
	}

	.btn-tag:active {
		transform: scale(0.98);
	}

	/* Focus styles for accessibility */
	.btn:focus-visible {
		outline: 2px solid #8b5cf6;
		outline-offset: 3px;
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.btn-large {
			padding: 1rem 2rem;
			font-size: 0.875rem;
		}

		.btn-medium {
			padding: 0.75rem 1.5rem;
			font-size: 0.8125rem;
		}
	}
</style>
