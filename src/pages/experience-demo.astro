---
import ExperienceCard from '../components/ExperienceCard.astro';

const experiences = [
	{
		number: "01",
		title: "Senior UI Designer",
		company: "User-Hub",
		location: "Bangladesh",
		duration: "JOB DURATION",
		years: "2 YEARS"
	},
	{
		number: "02",
		title: "Full Stack Developer",
		company: "TechCorp",
		location: "Remote",
		duration: "JOB DURATION",
		years: "3 YEARS"
	},
	{
		number: "03",
		title: "Frontend Developer",
		company: "StartupXYZ",
		location: "Indonesia",
		duration: "JOB DURATION",
		years: "1.5 YEARS"
	},
	{
		number: "04",
		title: "UI/UX Designer",
		company: "Creative Agency",
		location: "Singapore",
		duration: "JOB DURATION",
		years: "2 YEARS"
	}
];
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Experience Cards - Demo</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
	<div class="page-wrapper">
		<header class="demo-header">
			<div class="container">
				<span class="label">Component Demo</span>
				<h1 class="demo-title">Experience Cards</h1>
				<p class="demo-description">
					Dark mode futuristic design with gradient borders and noise texture
				</p>
			</div>
		</header>

		<main class="demo-main">
			<div class="container">
				<div class="experience-list">
					{experiences.map((exp) => (
						<ExperienceCard
							number={exp.number}
							title={exp.title}
							company={exp.company}
							location={exp.location}
							duration={exp.duration}
							years={exp.years}
						/>
					))}
				</div>
			</div>
		</main>

		<footer class="demo-footer">
			<div class="container">
				<p>Hover over the cards to see the interactive effects</p>
				<a href="/" class="back-link">‚Üê Back to Home</a>
			</div>
		</footer>
	</div>
</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html, body {
		width: 100%;
		height: 100%;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	body {
		background: #0a0a0f;
		color: #ffffff;
		overflow-x: hidden;
	}

	.page-wrapper {
		position: relative;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.page-wrapper::before {
		content: '';
		position: fixed;
		inset: 0;
		background-image:
			radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.05) 1px, transparent 1px),
			radial-gradient(circle at 90% 80%, rgba(139, 92, 246, 0.05) 1px, transparent 1px),
			radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
			radial-gradient(circle at 30% 70%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
		background-size: 100px 100px, 150px 150px, 80px 80px, 120px 120px;
		background-position: 0 0, 50px 50px, 25px 25px, 75px 75px;
		pointer-events: none;
		z-index: 0;
		animation: twinkle 8s ease-in-out infinite;
	}

	@keyframes twinkle {
		0%, 100% {
			opacity: 0.5;
		}
		50% {
			opacity: 0.8;
		}
	}

	.container {
		position: relative;
		max-width: 1000px;
		margin: 0 auto;
		padding: 0 2rem;
		z-index: 1;
	}

	.demo-header {
		padding: 6rem 0 4rem;
		text-align: center;
	}

	.label {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: rgba(99, 102, 241, 0.1);
		border: 1px solid rgba(99, 102, 241, 0.3);
		border-radius: 2rem;
		color: #6366f1;
		font-size: 0.875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 1.5rem;
	}

	.demo-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		color: #ffffff;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
		line-height: 1.1;
		background: linear-gradient(135deg, #ffffff, #a0a0b0);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.demo-description {
		font-size: 1.125rem;
		color: rgba(255, 255, 255, 0.6);
		line-height: 1.7;
	}

	.demo-main {
		flex: 1;
		padding: 2rem 0 4rem;
	}

	.experience-list {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.demo-footer {
		padding: 4rem 0 3rem;
		text-align: center;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.demo-footer p {
		color: rgba(255, 255, 255, 0.5);
		font-size: 0.875rem;
		margin-bottom: 1rem;
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		background: rgba(99, 102, 241, 0.1);
		border: 1px solid rgba(99, 102, 241, 0.3);
		border-radius: 0.5rem;
		color: #6366f1;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
	}

	.back-link:hover {
		background: rgba(99, 102, 241, 0.2);
		border-color: rgba(99, 102, 241, 0.5);
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		.demo-header {
			padding: 4rem 0 3rem;
		}

		.demo-title {
			font-size: 2rem;
		}

		.demo-description {
			font-size: 1rem;
		}

		.container {
			padding: 0 1.5rem;
		}

		.experience-list {
			gap: 1.25rem;
		}

		.demo-main {
			padding: 1.5rem 0 3rem;
		}

		.demo-footer {
			padding: 3rem 0 2rem;
		}
	}

	@media (max-width: 480px) {
		.demo-header {
			padding: 3rem 0 2rem;
		}

		.container {
			padding: 0 1rem;
		}

		.demo-main {
			padding: 1rem 0 2rem;
		}
	}
</style>
